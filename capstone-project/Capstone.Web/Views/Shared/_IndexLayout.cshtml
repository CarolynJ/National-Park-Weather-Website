<!DOCTYPE html>

<html id="index-layout-fullscreen">
<head>
    <link rel="stylesheet" href="~/Content/bootstrap.css" type="text/css" />
    <link rel="stylesheet" href="~/Content/StyleSheet.css" type="text/css" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>

<body id="index-layout-fullscreen">

    <header>
        <nav class="navbar navbar-default" id="index-navbar">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#collapse-bar" aria-expanded="false">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand">
                        <img id="logo" src="~/Content/other/logo.png" />
                    </a>
                </div>

                <div class="collapse navbar-collapse" id="collapse-bar">
                    <ul class="nav navbar-nav">
                        <li class="active"><a href="@Url.Action("Index", "Home")">Home<span class="sr-only">(current)</span></a></li>
                        <li><a href="@Url.Action("ParkList", "Home")">Parks</a></li>
                        <li><a href="@Url.Action("FavoriteParks", "Home")">Most Reviewed Parks</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <section class="index-layout-section">
        @RenderBody()
    </section>


    <script src="~/Scripts/jquery-1.9.1.intellisense.js"></script>
    <script src="~/Scripts/jquery-1.9.1.js"></script>
    <script src="~/Scripts/jquery-1.9.1.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('li.active').removeClass('active');
            $('a[href="' + location.pathname + '"]').closest('li').addClass('active');
        });
    </script>



</body>
</html>

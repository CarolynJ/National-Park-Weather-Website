@using Capstone.Web.Models;
@using Capstone.Web.Controllers;
@model WeatherViewModel


@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Park.ParkName , @Model.Park.State</h2>
<h3> Come see up to @Model.Park.NumberOfAnimalSpecies different species of animals!</h3>

<div class="detailListing">
    <div
            <a> <img src="@Url.Content("~/Content/ParkPic/" + Model.Park.ParkCode + ".jpg")" /> </a>
        </div>
    <div>
        <nav class="detailNav">
            <p><a href="@Url.Action("Weather", "Home", new { id = Model.Park.ParkCode })"> Check the Forcast</a></p>
            <p><a href="@Url.Action("Survey", "Home", new { id = Model.Park.ParkCode })">Take our Survey...</a></p>
        </nav>

        <div class="lisitngText">
            <div class="info">
                <p>@Model.Park.AnnualVistorCount Annual Visitors</p>
                <p>Founded in @Model.Park.YearFounded</p>
                <p>Daily Entrance Fee: @Model.Park.EntryFee.ToString("C")</p>
               
            </div>
            <table class="info">
                <tr>
                    <td>Park Acreage</td>
                    <td>@Model.Park.Acreage</td>
                </tr>
                <tr>
                    <td>Park Elevation</td>
                    <td>@Model.Park.ElevationInFeet ft</td>
                </tr>
                <tr>
                    <td>Total Miles of Trails</td>
                    <td>@Model.Park.MilesOfTrail</td>
                </tr>
                <tr>
                    <td>Number of Campsites</td>
                    <td>@Model.Park.NumberOfCampsites</td>
                </tr>
            </table>
        </div>
    </div>


    <p class="description">@Model.Park.ParkDescription</p>

    <section class="weatherForecast">
        <div class="todayForecast">
            <h2>Today's Forecast</h2>
            <p>
                @Model.Forecast[0].Forecast
            </p>
            <p> @Model.Forecast[0].Advice(Model.Forecast[0].Forecast)</p>
            <p>Low temp:@Model.Forecast[0].Low    High temp:@Model.Forecast[0].High</p>
            <a> <img src="@Url.Content("~/Content/weather/" + @Model.Forecast[0].Forecast + ".png")" /> </a>
        </div>
        <div class="weekForecast"
        <table>
            <thead> Peek at the week ahead... </thead>
            <tbody>
                <tr>
                    @for (int i = 1; i <= 4; i++)
                    {
                        <td> <img class="weatherImg" src="@Url.Content("~/Content/weather/" + @Model.Forecast[i].Forecast + ".png")" /> </td>
                    }

                </tr>
                <tr>
                    @for (int i = 1; i <= 4; i++)
                    {
                        <td>
                            High @Model.Forecast[i].High
                        </td>
                    }

                </tr>
                <tr>
                    @for (int i = 1; i <= 4; i++)
                    {
                        <td>
                            Low @Model.Forecast[i].Low
                        </td>
                    }
                </tr>
            </tbody>
        </table>
    </section>
